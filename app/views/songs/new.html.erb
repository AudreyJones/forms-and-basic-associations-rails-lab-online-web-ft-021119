
<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <br />
  <%= f.label :genre %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name%>
  <br />
  <%= f.label :notes %>
  <%= f.text_field :song_notes_1 %>
  <%= f.text_field :song_notes_2 %>
  <%= f.text_field :song_notes_3 %>
  <br />
  <%= f.submit %>
<% end %>

<%= form_for @post do |f| %>
 <%= f.collection_select :category_name, Category.all, :name, :name %>
 <%= f.text_field :content %>
 <%= f.submit %>
<% end %>

